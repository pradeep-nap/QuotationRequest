<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quotation_request_list_view" model="ir.ui.view">
        <field name="name">quotation.request.list.view</field>
        <field name="model">quotation.request</field>
        <field name="arch" type="xml">
            <tree string="Quotation Requests" default_order="create_date desc" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-success="state == 'validated'">
                <field name="name" string="Reference"/>
                <field name="partner_id"/>
                <field name="date_request" string="Date"/>
                <field name="delivery_deadline"/>
                <field name="amount_total" sum="Total Amount"/>
                <field name="state" string="Status" widget="badge" decoration-info="state in ('draft', 'submitted')" decoration-success="state == 'validated'" decoration-warning="state == 'quotation_sent'" decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="quotation_request_form_view" model="ir.ui.view">
        <field name="name">quotation.request.form.view</field>
        <field name="model">quotation.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validate" type="object" 
                            class="btn-primary" invisible="state != 'submitted'"/>
                    <button name="generate_quotation" string="Generate Quotation" type="object" 
                            class="btn-primary" invisible="state != 'validated'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ('cancelled', 'quotation_sent')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="draft,submitted,validated,quotation_sent"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_quotation" type="object" class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not quotation_id">
                            <field name="quotation_id" string="Quotation" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="date_request"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="delivery_deadline"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="line_ids" widget="section_and_note_one2many">
                                <tree editable="bottom">
                                    <control>
                                        <create string="Add a product"/>
                                    </control>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="product_uom" groups="uom.group_uom"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" sum="Subtotal"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="name"/>
                                            <label for="quantity"/>
                                            <div class="o_row">
                                                <field name="quantity"/>
                                                <field name="product_uom" groups="uom.group_uom"/>
                                            </div>
                                        </group>
                                        <group>
                                            <field name="price_unit"/>
                                            <field name="price_subtotal"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="create_date" readonly="1"/>
                                    <field name="write_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <data noupdate="1">
        <record id="seq_quotation_request" model="ir.sequence">
            <field name="name">Quotation Request Sequence</field>
            <field name="code">quotation.request</field>
            <field name="prefix">QR/</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>
    </data>

    <record id="action_quotation_requests" model="ir.actions.act_window">
        <field name="name">Quotation Requests</field>
        <field name="res_model">quotation.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="quotation_request_root_menu" 
          name="Quotation Requests"
          web_icon="quotation_request,static/description/icon.png"
          sequence="50"/>

    <menuitem id="quotation_request_list_menu"
          name="Requests"
          action="action_quotation_requests"
          parent="quotation_request_root_menu"
          sequence="10"/>
</odoo>