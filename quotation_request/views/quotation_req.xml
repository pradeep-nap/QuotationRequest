<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quotation_request_list_view" model="ir.ui.view">
        <field name="name">quotation.request.list.view</field>
        <field name="model">quotation.request</field>
        <field name="arch" type="xml">
            <tree string="Quotation Requests" default_order="create_date desc">
                <field name="name" string="Reference"/>
                <field name="partner_id"/>
                <field name="date_request" string="Date"/>
                <field name="delivery_deadline"/>
                <field name="amount_total" sum="Total Amount"/>
                <field name="display_state" string="Status"/>
            </tree>
        </field>
    </record>

    <record id="quotation_request_form_view" model="ir.ui.view">
        <field name="name">quotation.request.form.view</field>
        <field name="model">quotation.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validate" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_generate_quotation" string="Generate Quotation" type="object"
                            invisible="state != 'validated'" class="oe_highlight"/>
                    <button name="action_send_quotation" string="Send Quotation" type="object"
                            invisible="state != 'quotation_generated'" class="oe_highlight"/>
                    <button name="action_accept_quotation" string="Accept Quotation" type="object"
                            invisible="state != 'quotation_sent'" class="oe_highlight"/>
                    <button name="action_reject_quotation" string="Reject Quotation" type="object"
                            invisible="state != 'quotation_sent'"/>
                    <button name="action_view_quotation" string="View Quotation" type="object"
                            invisible="not quotation_id" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('cancelled', 'accepted', 'rejected')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,quotation_generated,quotation_sent,accepted,rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_quotation" type="object" class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not quotation_id">
                            <field name="quotation_id" string="Quotation" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="date_request"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="delivery_deadline"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom" groups="uom.group_uom"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="create_date" readonly="1"/>
                                    <field name="write_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer">
                        <field name="amount_total" widget="monetary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="seq_quotation_request" model="ir.sequence">
        <field name="name">Quotation Request Sequence</field>
        <field name="code">quotation.request</field>
        <field name="prefix">QR/</field>
        <field name="padding">4</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
    </record>

    <record id="action_quotation_requests" model="ir.actions.act_window">
        <field name="name">Quotation Requests</field>
        <field name="res_model">quotation.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="quotation_request_root_menu" 
          name="Quotation Requests"
          web_icon="quotation_request,static/description/icon.png"
          sequence="50"/>

    <menuitem id="quotation_request_list_menu"
          name="Requests"
          action="action_quotation_requests"
          parent="quotation_request_root_menu"
          sequence="10"/>
</odoo>