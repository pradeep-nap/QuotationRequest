<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_quotation" name="Portal My Home : Quotation Requests" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Quotation Requests</t>
                <t t-set="url" t-value="'/my/quotations'"/>
                <t t-set="placeholder_count" t-value="quotation_request_count"/>
            </t>
        </xpath>
    </template>
</odoo>
