<odoo>
    <record id="view_quotation_request_form" model="ir.ui.view">
        <field name="name">quotation.request.form</field>
        <field name="model">quotation.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validate" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_generate_quotation" string="Generate Quotation" type="object"
                            invisible="state != 'validated'" class="oe_highlight"/>
                    <button name="action_send_quotation" string="Send Quotation" type="object"
                            invisible="state != 'quotation_generated'" class="oe_highlight"/>
                    <button name="action_accept_quotation" string="Accept Quotation" type="object"
                            invisible="state != 'quotation_sent'" class="oe_highlight"/>
                    <button name="action_reject_quotation" string="Reject Quotation" type="object"
                            invisible="state != 'quotation_sent'"/>
                    <button name="action_view_quotation" string="View Quotation" type="object"
                            invisible="not quotation_id or state in ('draft', 'validated')" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('cancelled', 'accepted', 'rejected')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,quotation_generated,quotation_sent,accepted,rejected"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="date_request"/>
                        <field name="quotation_id" readonly="1" string="Quotation/Sales Order Reference"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quotation_requests" model="ir.actions.act_window">
        <field name="name">Quotation Requests</field>
        <field name="res_model">quotation.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_quotation_requests" name="Quotation Requests" 
              action="action_quotation_requests" 
              parent="sale.sale_menu_root" 
              sequence="5"/>
</odoo>
